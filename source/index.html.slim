            li.nav__item.nav__item--last= link_to "Last", "#"

      - %w(center fill csv dots breadcrumb).each do |modifier|
        .block__body: .variant
          .variant__header: code .nav--#{modifier}
          .variant__body
            ul class="nav--#{modifier}"
              li.nav__item= link_to "Terms of Service", "#"
              li.nav__item= link_to "Privacy Policy", "#"
              li.nav__item= link_to "Support", "#"
              li.nav__item= link_to "About", "#"

  hr

  .space--vertical-margin-8
